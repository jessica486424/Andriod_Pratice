<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="8dp"
        android:onClick="oncal"
        android:text="@string/calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Result1Textview"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.187" />


    <TextView
        android:id="@+id/Result1Textview"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:text="Output_peak"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/Result2Textview"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Output_trough"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Result1Textview"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="32dp"
        android:text="By SuiYun"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_cal"
        app:layout_constraintVertical_bias="0.848" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350px"
        android:layout_height="1000px"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="76dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="200px"
            android:layout_height="100px"
            android:text="@string/crea"
            tools:layout_editor_absoluteX="200px"
            tools:layout_editor_absoluteY="200px" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="16dp"
            android:text="@string/age"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="100px" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="16dp"
            android:text="@string/weight"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="100px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="16dp"
            android:text="@string/dose"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="100px" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="16dp"
            android:text="@string/freq"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="100px" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginTop="16dp"
            android:text="Gender:"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="350px"
            android:layout_height="100px"
            android:text="(Femal:1 / Male:0)"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="328dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="104dp"
        android:layout_height="900px"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/CreaInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:ems="10"
            android:inputType="number"
            android:text="@string/_0_7"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/AgeInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"

            android:ems="10"
            android:inputType="number"
            android:text="@string/_61"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/WeightInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:ems="10"
            android:inputType="number"
            android:text="@string/_77_4"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/DoseInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:ems="10"
            android:inputType="number"
            android:text="@string/_1000"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/FreqInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"
            android:ems="10"
            android:inputType="number"
            android:text="12.0"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/GenderInput"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="156dp"
            android:layout_marginRight="156dp"

            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textSize="12sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>